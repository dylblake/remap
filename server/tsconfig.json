{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "knex"],
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts",
    "knexfile.ts",
    "migrations/**/*.ts",
    "seeds/**/*.ts",
    "node_modules/@types/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
